# Configuration Enrichment API

# Apify API Token
# Get from: https://console.apify.com/account/integrations
ENRICHMENT_APIFY_API_TOKEN=your_apify_token_here

# Cache TTLs (seconds)
ENRICHMENT_CACHE_TTL_MONTHLY_LISTENERS=3600    # 1 hour - changes frequently
ENRICHMENT_CACHE_TTL_LABELS=86400              # 24 hours - changes rarely
ENRICHMENT_CACHE_TTL_MANAGEMENT=604800         # 7 days - almost never changes
ENRICHMENT_CACHE_TTL_SPOTIFY_DATA=86400        # 24 hours

# Retry & Circuit Breaker
ENRICHMENT_MAX_RETRIES=3
ENRICHMENT_RETRY_BACKOFF_FACTOR=2.0
ENRICHMENT_CIRCUIT_BREAKER_THRESHOLD=5         # failures before opening
ENRICHMENT_CIRCUIT_BREAKER_TIMEOUT=60          # seconds before half-open

# Timeouts (seconds)
ENRICHMENT_TIMEOUT_APIFY=120
ENRICHMENT_TIMEOUT_SPOTIFY=10
ENRICHMENT_TIMEOUT_WIKIDATA=15

# Label Resolution
ENRICHMENT_LABEL_RESOLUTION_METHOD=latest_release  # or most_frequent
ENRICHMENT_LABEL_MOST_FREQUENT_COUNT=20

# Batch Processing
ENRICHMENT_BATCH_SIZE=50
ENRICHMENT_BATCH_CONCURRENCY=5
